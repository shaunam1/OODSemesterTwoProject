<Window x:Name="MainWindow1" x:Class="project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800" Loaded="MainWindow1_Loaded">
    <TabControl x:Name="MyControl" TabStripPlacement="Bottom">
        <TabItem x:Name="TabHome">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="House"
                                             Width="25"
                                             Height="25"
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"
                                             Foreground="Black"/>

                    <TextBlock Text="Home"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="Black"/>
                </StackPanel>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="170"></RowDefinition>
                    <RowDefinition Height="170"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Kind="Cart" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" Margin="0,10,20,0"></materialDesign:PackIcon>
                <TextBlock x:Name="tblkCartCount" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" Margin="0,30,25,0"></TextBlock>
                <materialDesign:PackIcon Kind="Magnify" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,30,0"></materialDesign:PackIcon>
                <TextBox x:Name="tbxSearch" Grid.Column="1" HorizontalAlignment="Left" Margin="70,0,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Center" Width="276" Grid.ColumnSpan="2" GotFocus="tbxSearch_GotFocus"/>
                <ListBox x:Name="lbxGenre" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="22,33,22,10" SelectionChanged="lbxGenre_SelectionChanged" Grid.Row="1"/>
                <ListBox x:Name="lbxAuthor" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="23,33,21,10" Grid.Row="2" SelectionChanged="lbxAuthor_SelectionChanged"/>

                <Image Source="https://covers.openlibrary.org/b/id/14619878-M.jpg" x:Name="img1" Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" MouseUp="img1_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/0014421833-M.jpg" x:Name="img2" Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100" MouseUp="img2_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/7098465-M.jpg" x:Name="img3" Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" MouseUp="img3_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/7263662-M.jpg" x:Name="img4" Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100" MouseUp="img4_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/744854-M.jpg" x:Name="img5" Grid.Column="3" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" MouseUp="img5_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/14653120-M.jpg" x:Name="img6" Grid.Column="3" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100" MouseUp="img6_MouseUp"/>
                <TextBlock FontSize="16" x:Name="tblkFilter" HorizontalAlignment="Left" Margin="10,6,0,0" TextWrapping="Wrap" Text="Filter" VerticalAlignment="Top"/>
                <TextBlock x:Name="tblkGenre" HorizontalAlignment="Left" Margin="22,12,0,0" TextWrapping="Wrap" Text="Genre" VerticalAlignment="Top" Grid.Row="1"/>
                <TextBlock x:Name="tblkAuthor" HorizontalAlignment="Left" Margin="18,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Author" VerticalAlignment="Top"/>

               
            </Grid>

        </TabItem>
        <TabItem x:Name="TabBookshelf">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Bookshelf"
                                  Width="25"
                                  Height="25"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  Foreground="Black"/>

                    <TextBlock Text="Bookshelf"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="Black"/>
                </StackPanel>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="170"></RowDefinition>
                    <RowDefinition Height="170"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Kind="Cart" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" Margin="0,10,20,0"></materialDesign:PackIcon>
                <TextBlock x:Name="tblkShelfCartCount" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" Margin="0,30,25,0"></TextBlock>
                <materialDesign:PackIcon Kind="Magnify" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,30,0"></materialDesign:PackIcon>
                <TextBox x:Name="tbxShelfSearch" Grid.Column="1" HorizontalAlignment="Left" Margin="70,0,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Center" Width="276" Grid.ColumnSpan="2" GotFocus="tbxSearch_GotFocus"/>
                <ListBox x:Name="lbxShelfGenre" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="22,33,22,10" SelectionChanged="lbxGenre_SelectionChanged" Grid.Row="1"/>
                <ListBox x:Name="lbxShelfAuthor" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="23,33,21,10" Grid.Row="2" SelectionChanged="lbxAuthor_SelectionChanged"/>

                <Image Source="https://covers.openlibrary.org/b/id/14619878-M.jpg" x:Name="imgShelf1" Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" MouseUp="img1_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/0014421833-M.jpg" x:Name="imgShelf2" Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100" MouseUp="img2_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/7098465-M.jpg" x:Name="imgShelf3" Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" MouseUp="img3_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/7263662-M.jpg" x:Name="imgShelf4" Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100" MouseUp="img4_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/744854-M.jpg" x:Name="imgShelf5" Grid.Column="3" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" MouseUp="img5_MouseUp"/>
                <Image Source="https://covers.openlibrary.org/b/id/14653120-M.jpg" x:Name="imgShelf6" Grid.Column="3" HorizontalAlignment="Left" Height="100" Margin="47,32,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100" MouseUp="img6_MouseUp"/>
                <TextBlock FontSize="16" x:Name="tblkShelfFilter" HorizontalAlignment="Left" Margin="10,6,0,0" TextWrapping="Wrap" Text="Filter" VerticalAlignment="Top"/>
                <TextBlock x:Name="tblkShelfGenre" HorizontalAlignment="Left" Margin="22,12,0,0" TextWrapping="Wrap" Text="Genre" VerticalAlignment="Top" Grid.Row="1"/>
                <TextBlock x:Name="tblkShelfAuthor" HorizontalAlignment="Left" Margin="18,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Author" VerticalAlignment="Top"/>

               
            </Grid>
        </TabItem>
        <TabItem x:Name="TabCheckout">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Cart"
                           Width="25"
                           Height="25"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="Black"/>

                    <TextBlock Text="Checkout"
             VerticalAlignment="Center"
             FontSize="16"
             Foreground="Black"/>
                </StackPanel>
            </TabItem.Header>
            
        </TabItem>
        <TabItem x:Name="TabBookInfo" Width="0" Visibility="Hidden">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">

                </StackPanel>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="tblkTitle" Grid.Row="0" Grid.Column="0"></TextBlock>
                <Image Name="imgCover" Grid.Row="1" Grid.Column="0" Width="100px" Height="100px"></Image>
                <TextBlock Name="tblkBookInfo" Grid.Row="2" Grid.Column="0"></TextBlock>
                <materialDesign:PackIcon Kind="Cart" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,20,0"></materialDesign:PackIcon>
                <TextBlock x:Name="tblkCount" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="0,30,25,0"></TextBlock>
                <Button Name="btnShelve" Content="Add to Bookshelf" Grid.Row="2" Grid.Column="1" Margin="0,0,10,0"></Button>
                <Button Name="btnAddtoCart" Content="Add to Cart" Grid.Row="2" Grid.Column="1" Margin="0,100,10,0"></Button>



            </Grid>
        </TabItem>

    </TabControl>


</Window>

    
        